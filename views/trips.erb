<div class="ext-box">
  <div class="int-box">
    <div class="container">
      <div classs="header">
        <div class="container">
          <div class="trip-form-well">
            <h1> TRIPS </h1>
            <% if @user.trips.any? %>
            <ul>
              <% @trips.each do |trip| %>
              <li><h3><a href="/trips/<%= trip.id %>"> <%= trip.destination %></a></h3></li>
              <% end %>
            </ul>
            <% else %>
            <h3> There are no trips yet. </h3>
            <% end %>
            <br>
            <div class="well">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
